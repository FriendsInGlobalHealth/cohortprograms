<?xml version="1.0" encoding="UTF-8"?>

<!-- Beans to add to the current Application context definition -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  		    http://www.springframework.org/schema/context
  		    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="org.openmrs.module.cohortprograms" />

    <!-- Wraps CohortProgramsService methods in DB transactions and OpenMRS interceptors,
    which set audit info like dateCreated, changedBy, etc.-->
    <bean id="cohortprograms.CohortProgramsService"
            class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="org.openmrs.module.cohortprograms.api.impl.CohortProgramsServiceImpl">
                <property name="dao" ref="cohortprograms.programCohortDao" />
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>

    <!-- Adds CohortProgramsService to OpenMRS context so it can be accessed
    calling Context.getService(CohortProgramsService.class) -->
    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.cohortprograms.api.CohortProgramsService</value>
                <ref bean="cohortprograms.CohortProgramsService" />
            </list>
        </property>
    </bean>
</beans>
