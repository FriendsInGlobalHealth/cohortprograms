	<!-- Required Privileges 
	<privilege>
		<name>Form Entry</name>
		<description>Allows user to access Form Entry pages/functions</description>
	</privilege>
	 /Required Privileges -->


	<globalProperty>
		<property>@MODULE_ID@.remote.server.url</property>
		<defaultValue></defaultValue>
		<description>
			URL of the server from which to search the remote patients
		</description>
	</globalProperty>
	<globalProperty>
		<property>@MODULE_ID@.remote.server.username</property>
		<defaultValue></defaultValue>
		<description>
			Username of the user who has privilege to view patients on
			the remote server.
		</description>
	</globalProperty>
	<globalProperty>
		<property>@MODULE_ID@.remote.server.password</property>
		<defaultValue></defaultValue>
		<description>
			The password for the user represented by the username property.
		</description>
	</globalProperty>
	<globalProperty>
		<property>@MODULE_ID@.imported.patient.location.uuid</property>
		<defaultValue></defaultValue>
		<description>
			The UUID of the location that will replace the location an imported patient demographic. Used for things like identifier location
		</description>
	</globalProperty>

